    print("‚Ä¢ Abaqus-compatible export with material properties")
    print("‚Ä¢ GPU-accelerated training")
    print("‚Ä¢ Enhanced quality with more training epochs")
    print("=" * 70)

    reconstructor = FastShaleReconstructor3D(base_path, excel_path)
    target_sample = "sample3"  # sample1..sample8
    print(f"\nüéØ Target sample: {target_sample}\n" + "="*70)

    # INCREASE EPOCHS FOR BETTER QUALITY
    result = reconstructor.process_sample(
        target_sample,
        unet_epochs=40,  # Increased from 10 to 30
        slicegan_epochs=50  # Increased from 10 to 20
    )

    if result:
        print(f"\nüéâ SUCCESS! 4 different 3D shale volumes generated for {target_sample}")
        print(f"üìä Scattered volume shape: {result['scattered_volume'].shape}")
        print(f"üìä Continuous volume shape: {result['continuous_volume'].shape}")
        print(f"üìä Realistic volume shape: {result['realistic_volume'].shape}")
        print(f"üìä Complete Continuous volume shape: {result['complete_continuous_volume'].shape}")
        print(f"üìà Scattered similarity: {result['scattered_similarity']:.4f}")
        print(f"üìà Continuous similarity: {result['continuous_similarity']:.4f}")
        print(f"üìà Realistic similarity: {result['realistic_similarity']:.4f}")
        print(f"üìà Complete Continuous similarity: {result['complete_continuous_similarity']:.4f}")
        print(f"‚è±Ô∏è  Processing time: {result['processing_time']:.1f} minutes")
        print(f"üíæ Abaqus files: {result['abaqus_files']}")
        print(f"üìÅ All results saved in Output/ directory")

        # Check quality metrics for realistic model (primary)
        volume = result['realistic_volume']
        intensity_std = np.std(volume)
        moran_i = morans_I(volume)

        print(f"\nüìä FINAL QUALITY METRICS:")
        print(f"   ‚Ä¢ Intensity standard deviation: {intensity_std:.4f}")
        print(f"   ‚Ä¢ Moran's I (spatial autocorrelation): {moran_i:.4f}")
        print(f"   ‚Ä¢ Realistic model similarity: {result['realistic_similarity']:.4f}")

        if intensity_std > 0.1 and moran_i > 0.1:
            print("‚úÖ Quality metrics are good!")
        else:
            print("‚ö†Ô∏è  Consider increasing training epochs further for better quality")

